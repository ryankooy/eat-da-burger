  <footer class="d-flex justify-content-center">
    <a href="https://www.freepik.com/free-photos-vectors/food" id="credit" target="_blank">Food vector created by dooder - www.freepik.com</a>
  </footer>

  <script src="../models/burger.js"></script>
  <script type="text/javascript">
    $("#go-burg").on("click", function() {
      var newBurg = $("#new-burg").val();
      var burg = {
        burger_name: newBurg,
      }
      burger.insertOne("burger_name", burg);
    });
    
    $(".devour").on("click", function() {
      var eat = $(".burgie");
      eat.animate({ "left": "600px" }, 700);
      eat.attr("trigger", "1");
    });
  </script>

