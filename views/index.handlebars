    <div class="row">
      <div class="col-6 column1">
        <h3>Select Your Yummy Burgie</h3>
        <ul>
          {{#each burger}}
            {{#unless this.devoured}}
              <div class="card burgie" trigger="0">
                <div class="row no-gutters">
                  <div class="card-body">
                    <h5 class="card-title">{{this.burger_name}}</h5>
                    <button class="btn btn-sm my-2 my-sm-0 devour" type="submit">DEVOUR IT</button>
                  </div>
                </div>
              </div>
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-6 column2">
        <h3>Devoured</h3>
        <ul>
          {{#each burger}}
            {{#if this.devoured}}
            <div class="card stuck">
              <div class="row no-gutters">
                <div class="card-body">
                  <h5 class="card-title">{{this.burger_name}}</h5>
                </div>
              </div>
            </div>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
