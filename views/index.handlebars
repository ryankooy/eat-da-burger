<div class="all">

  <h1 id="header">EAT DA BURGER!</h1>

  <div class="container">
    <form class="create-form">
      <div class="form-group">
        <label for="burg-name"><h5>Add A Burgie:</h5></label>
        <input type="text" id="new-burg" name="name">
        <input class="btn btn-secondary btn-sm go-burg" type="submit" value="Submit">
      </div>
    </form>
    <div class="row">
      <div class="col-6 column1">
        <h3>Select Your Yummy Burgie</h3>
        <ul>
          {{#each burger}}
            <div class="card burgie" trigger="0" style="width: 18rem;">
              <div class="row no-gutters">
                <img src="/assets/img/burg.jpg" class="card-img-left burg" alt="Burg">
                <div class="card-body">
                  <h5 class="card-title">{{burger_name}}</h5>
                  <input class="btn btn-danger btn-sm devour" type="submit" value="DEVOUR IT">
                </div>
              </div>
            </div>
          {{/each}}
        </ul>
      </div>
      <div class="col-6 column2">
        <h3>Devoured</h3>
        <ul>
          {{#each burger}}
            {{#if devoured}}
              <li>
                <p>Devoured: {{burger_name}}</p>
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <a href="https://www.freepik.com/free-photos-vectors/food">Food vector created by dooder - www.freepik.com</a>

  <script type="text/javascript">
    $(".go-burg").on("click", function() {
      var burg = $("#new-burg").val();
      burgerObject.push(burg);
    });
    
    $(".devour").on("click", function() {
      if($(".burgie").attr("trigger") === "0") {
        $(".burgie").children().addClass("disabled");
        $(".burgie").animate({ "left": "500px" }, 700);
        $(".burgie").attr("trigger", "1");
        $(".devour").remove();
        $(".burg").remove();
      };
    });
  </script>

</div>