<main class="all">

  <div class="container">
    <nav class="navbar fixed-top navbar-light bg-dark" id="navvie">
      <a class="navbar-brand"><h1 id="header">EAT DA BURGIE!</h1></a>
      <form class="form-inline" action="/burger/create" method="POST">
        <input class="form-control mr-sm-2" id="new-burg" onkeyup="stoppedTyping()" name="burger_name" type="text">
        <button class="btn my-2 my-sm-0" id="go-burg" type="submit">Add Burgie</button>
      </form>
    </nav>
  </div>

  <div class="container cont2">
    <div class="d-flex justify-content-center">
      <img src="/assets/img/burg.jpg" class="card-img-left burg" alt="Burg">
      <img src="/assets/img/burg.jpg" class="card-img-left burg" alt="Burg">
