      </div>
      <div class="col-6 column2">
        <h3>Devoured</h3>
        <ul>
          {{#each burger}}
            {{#if devoured}}
              <li>
                <p>Devoured: {{burger_name}}</p>
              </li>
            {{/if}}
          {{/each}}
        </ul>
