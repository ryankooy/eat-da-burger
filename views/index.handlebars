      <div class="col-6 column1">
        <h3>Select Your Yummy Burgie</h3>
        <ul>
          {{#each burger}}
            <div class="card burgie" trigger="0">
              <div class="row no-gutters">
                <div class="card-body">
                  <h5 class="card-title">{{burger_name}}</h5>
                  <button class="btn btn-dark btn-sm devour" type="submit">DEVOUR IT</button>
                </div>
