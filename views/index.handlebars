    <div class="row">
      <div class="col-6 column1 textaligncenter">
        <h3>Select Your Yummy Burgie</h3>
        <ul>
          {{#each burger}}
            {{#unless this.devoured}}
              <form action="/burger/update/{{this.id}}?_method=PUT" method="POST">
                <button class="card burgie devour" trigger="0" type="submit">
                  <div class="row no-gutters">
                    <div class="card-body">
                      <div class="card-title center">
                        <p id="eat">DEVOUR</p>
                        <p id="eat-burg">{{this.burger_name}}</p>
                        <input type="hidden" name="devoured" value="false">
                      </div>
                    </div>
                  </div>
                </button>
              </form>
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-6 column2 textaligncenter">
        <h3>Devoured</h3>
        <ul>
          {{#each burger}}
            {{#if this.devoured}}
            <div class="card stuck">
              <div class="row no-gutters">
                <form class="card-body" action="/burger/update/{{this.id}}?_method=PUT" method="POST">
                  <h5 class="card-title">{{this.burger_name}}</h5>
                  <input type="hidden" name="devoured" value="true">
                </form>
              </div>
            </div>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
