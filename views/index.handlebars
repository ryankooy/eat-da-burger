  <script type="text/javascript">
    $(".go-burg").on("click", function() {
      var burg = $("#new-burg").val();
      burgerObject.push(burg);
    });
    
    $(".devour").on("click", function() {
      if($(".burgie").attr("trigger") === "0") {
        $(".burgie").animate({ "left": "500px" }, 700);
        $(".burgie").attr("trigger", "1");
      };
    });
  </script>

